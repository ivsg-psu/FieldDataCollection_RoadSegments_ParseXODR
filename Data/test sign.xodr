    <road id="1" name="MainRoad" length="1000.0" junction="-1">
        
        <type s="0.0" type="rural" speed="80"/> <!-- For illustrative purposes: rural road type with 80 km/h limit -->

        <planView>
            <geometry s="0.0" x="0.0" y="0.0" hdg="0.0" length="1000.0">
